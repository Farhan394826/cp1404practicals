
BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        TextInput:
            id: input_number
            hint_text: "Enter a number"
            font_size: 18
        Button:
            text: "Square"
            on_press: app.handle_calculate(input_number.text)

    Label:
        id: output_label
        text: "Result will appear here"
        font_size: 18
        color: (1, 0.4, 0.7, 1)

    Label:
        text: 'Tip: Enter a number and press "Square" to see the result.'
        font_size: 14
